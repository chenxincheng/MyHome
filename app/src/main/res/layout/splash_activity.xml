<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    android:orientation="vertical">

    <com.cxc.firstproject.view.shimmer.ShimmerTextView
        android:id="@+id/tv_inside"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="here"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <com.cxc.firstproject.view.shimmer.ShimmerTextView
        android:id="@+id/tv_shimmer"
        android:layout_below="@id/tv_inside"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="flying their own"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/tv_shimmer"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="让我们放飞自我"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="XTC让你更懂生活"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_jump"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:background="@drawable/shape_jump"
        android:gravity="center"
        android:text="4"
        android:textColor="#fff"
        android:textSize="16sp" />
</RelativeLayout>